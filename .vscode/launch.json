{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "evaluate.py",
            "console": "integratedTerminal",
            "args": "--config './config.yaml'"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run Observations as Module",
            "type": "python",
            "request": "launch",
            "module": "src.models.observations",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Run Trainer as Module",
            "type": "python",
            "request": "launch",
            "module": "src.training.trainer",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}